{
  "name": "playground-yarn-hoisting",
  "description": "A playground to experiment with yarn hoisting behavior",
  "author": "Andrew Stegmaier",
  "license": "ISC",
  "private": true,
  "scripts": {
    "retest:windows": "npm run reinstall:windows && npm run test",
    "test": "npm run test:a && npm run test:b",
    "test:a": "node --import ./register-es-import-trace.js packages/a/index.js",
    "test:b": "node --import ./register-es-import-trace.js packages/b/index.js",
    "reinstall:windows": "npm run clean:windows && yarn install",
    "clean:windows": "powershell -Command \"Remove-Item -Path 'node_modules', 'packages/a/node_modules', 'packages/b/node_modules', 'yarn.lock', '.yarn/install-state.gz' -Recurse -Force -ErrorAction SilentlyContinue; exit 0\"",
    "clean:bash": "rm -rf node_modules packages/a/node_modules packages/b/node_modules yarn.lock .yarn/install-state.gz"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "packageManager": "yarn@4.10.3"
}
