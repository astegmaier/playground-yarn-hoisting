{
  "name": "playground-yarn-hoisting",
  "description": "A playground to experiment with yarn hoisting behavior",
  "author": "Andrew Stegmaier",
  "license": "ISC",
  "private": true,
  "scripts": {
    "clean:windows": "powershell -Command \"Remove-Item -Path 'node_modules', 'packages/a/node_modules', 'packages/b/node_modules', 'yarn.lock' -Recurse -Force -ErrorAction SilentlyContinue\"",
    "clean:bash": "rm -rf node_modules packages/a/node_modules packages/b/node_modules yarn.lock"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  }
}
